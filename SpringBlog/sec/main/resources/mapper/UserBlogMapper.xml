<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.yexiaoxiaogo.SpringBlog.dao.UserBlogDao">
	<resultMap id="BaseResultMap" type="io.github.yexiaoxiaogo.SpringBlog.domain.UserBlog">
		<result column="blogid" property="blogid" />
		<result column="userid" property="userid" />
		<result column="username" property="username" />
		<result column="title" property="title" />
		<result column="date" property="date" />
	</resultMap>

	<!-- 查询列表 -->
	<select id="findBlogListByUser" parameterType="java.lang.String"
		resultMap="BaseResultMap">
		SELECT * FROM blog WHERE userid = #{userid}
	</select>

</mapper>